{
	"extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
	"include": [
		"src/renderer/src/env.d.ts",
		"src/renderer/src/**/*",
		"src/preload/*.d.ts",
		"src/main/settings.ts"
	],
	"compilerOptions": {
		"composite": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@renderer/*": ["src/renderer/src/*"],
			"@main/*": ["src/main/*"],
		}
	}
}
